{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es5", "es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "strict": true
  },
  "include": [
    "src",
    "examples"
  ],
  "exclude": [
    "node_modules"
  ]
}